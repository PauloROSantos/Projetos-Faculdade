package revisao2;

public class Ex1 {
	static int topo;
	static String nome = "Paulo Roberto de Oliveira Santos.";
	static String pilha[] = new String[100];

	
	public static String pop(){
		if ( topo > 0){
			topo--;
			return pilha[topo];
		}else{
			return "Pilha vazia";
		}
		
	}
	public static void push(String nome){
		pilha[topo] = nome;
		topo++;
	}
	
	
	public static void main(String[] args){
		System.out.println(nome);
		
		for ( int i = 0; i < nome.length() ; i++){
			if (nome.charAt(i) == '.'){
				push(String.valueOf(nome.charAt(i)));
				nome = nome.replace('.',' ');
			}
		}
		
		
		String nome2[] = nome.split(" ");
		
		for ( int i = 0 ; i < nome2.length ; i++){
			push(nome2[i]);
		}
		System.out.println();
		
		do{
			for ( int i = 0 ; i < pilha.length ; i++){
					if ( topo > 2){
					System.out.print(pop()+" ");
					}else{
						System.out.print(pop());
					}

		}
		}while(topo > 0);
		
	}
	}


package revisao2;

public class Ex1 {
	String pilha[];
	
	private String nome;
	
	public Ex1(String nome) {
		this.nome = nome;
	}
	
	public String getNome(){
		return nome;
	}
	public void setNome(String nome){
		this.nome = nome;
	}
	public static String removerPonto(String nome){
		String novo = "";
		for (int i = 0; i < nome.length() ; i++)
			if ( nome.charAt(i) == '.') {
				novo = nome.substring(0, nome.charAt(i));
				}
		System.out.println(novo);
		return nome;
	}
	

}
